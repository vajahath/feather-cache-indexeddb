  "version": "0.2.0",
  "configurations": [
    {
      "name": "TS FILE",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/ts-node",
      "args": ["${relativeFile}"],
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "protocol": "inspector",
      "env": {},
      "runtimeArgs": ["--nolazy"]
    },
    {
      "name": "TS SPEC FILE",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "args": ["${relativeFile}", "--detectOpenHandles"],
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "protocol": "inspector",
      "env": {},
      "runtimeArgs": ["--nolazy"]
    }
  ]
}
